th,td{
  vertical-align: middle!important;
  text-align: center;
}
.zoom-in {
  position: relative;
  width: 50%;
}
.text {
  display: block;
  width: 187%;

}
.overlay {
  position: absolute;
  top:-55px;
  left: -74px;
  background-color: #008CBA;
  overflow: hidden;
  width:240px;
  height:135px;
  transform: scale(0);
  transition: .3s ease;
}
.zoom-in:hover .overlay {
  transform: scale(1);
}
p{
  font-size: 17px;
} 