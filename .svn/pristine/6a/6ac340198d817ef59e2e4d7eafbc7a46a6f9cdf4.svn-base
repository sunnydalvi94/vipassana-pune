<?php
defined('BASEPATH') OR exit('No direct script access allowed');

class Slider_web extends Base_Controller {
 

  public function __construct()
  {
    parent::__construct();
    $this->load->model('common_model');
  }

 public function slider_list()
 {
  $data['slider_data']=$this->common_model->fetchDataAsc('tbl_slider','slider_id');
  $data['keydata'] = $this->common_model->selectDetailsWhr('tbl_rest_keys','id',1);	
  $this->load->view('slider-list',$data);
 }
 public function add_slider($id=NULL)
 {
   	$data['keydata'] = $this->common_model->selectDetailsWhr('tbl_rest_keys','id',1);
   	if($id)
    {
      $data['slider_data'] = $this->common_model->selectDetailsWhr('tbl_slider','slider_id',$id);
    }
    $this->load->view('add-slider',$data);
  }
  


     public function upload_slider_image()
    {
        if($_FILES['file']['name'] != '')
        {
            $test =explode(".", $_FILES['file']['name']);
            $extension = end($test);
            $name = rand(100000, 999999) . '.' . $extension;
            $location = './uploads/slider_images/'.$name;
            move_uploaded_file($_FILES['file']['tmp_name'], $location);
            $img_path = base_url().'uploads/slider_images/'.$name;
            $img =  '<img src="'.$img_path.'" style="height: 150px; width: 200px;" class="img-thumbnail"/>';
            echo $img;
        }
    }
}
