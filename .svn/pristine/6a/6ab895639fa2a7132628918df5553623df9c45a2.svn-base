<?php
defined('BASEPATH') OR exit('No direct script access allowed');

class Seva_registration_web extends Base_Controller {
 
  public function __construct()
  {
    parent::__construct();
    $this->load->model('common_model');
  }

 public function Seva_registration_list()
 {
   $data['seva_registration_data']=$this->common_model->fetchDataDesc('tbl_seva_registration','seva_registration_id');
   $data['keydata'] = $this->common_model->selectDetailsWhr('tbl_rest_keys','id',1);
   $this->load->view('Seva-registration-list',$data);
 }

 public function reply_Seva_registration($id=NULL)
 {
   $data['keydata'] = $this->common_model->selectDetailsWhr('tbl_rest_keys','id',1);
   $data['seva_registration_data'] = $this->common_model->addData('tbl_seva_registration',$data);
   
 	if($id)
    {
      $data['seva_registration_data'] = $this->common_model->selectDetailsWhr('tbl_seva_registration','seva_registration_id',$id);
    }
 	$this->load->view('reply-Seva-registration',$data);
 }
}
