		if(isset($details['slider_id']))
		{    
			$id=$details['slider_id'];
		    $slider=array(
					'display'=>'N',
				);
			$results = $this->standard_model->updateRecord('tbl_slider','slider_id',$id,$slider);
			if($results)
			{
				$results = $this->encryptArray($details);
				return array(
					'state'=>true,
					'msg'=>'Image Delete!',
					'details'=>$results
				);
